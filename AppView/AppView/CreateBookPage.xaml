<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppView.CreateBookPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="BookName" Placeholder="Name" />
            <Button Text="Create" Pressed="Button_Pressed" />
            <Label x:Name="ErrorLabel" Text="Name is empty." IsVisible="False" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>